{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug code.exe",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Debug/code.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",            // ‚Üê your project root
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        { "description": "Enable pretty-printing", "text": "-enable-pretty-printing", "ignoreFailures": true }
      ]
    }
  ]
}
